}

/* DARK/LIGHT TOGGLE */
:root {
  --bg: #ffffff;
  --text: #2e2e2e;
  --accent: #1abc9c;
}

[data-theme="dark"] {
  --bg: #1e1e1e;
  --text: #f0f0f0;
  --accent: #4ecdc4;
}

body {
  background: var(--bg);
  color: var(--text);
}

/* SKILLS SECTION */
.skills {
  padding: 80px 0;
  background-color: #f8f9fa;
}

[data-theme="dark"] .skills {
  background-color: #2a2a2a;
}

.skills-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
  text-align: center;
}

.skills h2 {
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 50px;
  color: var(--text);
}

.tech-stack {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 30px;
  max-width: 800px;
  margin: 0 auto;
}

.tech-item {
  background: white;
  padding: 25px 20px;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
}

[data-theme="dark"] .tech-item {
  background: var(--dark-bg);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

.tech-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
}

[data-theme="dark"] .tech-item:hover {
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

.tech-icon {
  width: 48px;
  height: 48px;
  font-size: 32px;
  font-weight: bold;
  color: var(--button-color);
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(56, 130, 246, 0.1);
  border-radius: 8px;
}

.tech-name {
  font-size: 16px;
  font-weight: 600;
  color: var(--text);
}

/* Alternative: Badge Style Layout */
.tech-badges {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15px;
  max-width: 800px;
  margin: 0 auto;
}

.tech-badge {
  background: var(--button-color);
  color: white;
  padding: 12px 24px;
  border-radius: 25px;
  font-weight: 600;
  font-size: 14px;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tech-badge:hover {
  transform: scale(1.05);
  background: #2563eb;
}

/* Responsive adjustments */
@media (max-width: 640px) {
  .skills h2 {
    font-size: 28px;
  }
  
  .tech-stack {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 20px;
  }
  
  .tech-item {
    padding: 20px 15px;
  }
}
