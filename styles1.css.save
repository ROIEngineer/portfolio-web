/* RESET */
*, *::before, *::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Montserrat'; /* 'Roboto', sans-serif*/
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* VARIABLES */
:root {
  --dark-bg: #1F2937;
  --hero-main: #F9FAF8;
  --hero-secondary: #E5E7EB;
  --button-color: #3882F6;
}

/* HEADER */
header {
  background-color: var(--dark-bg);
  padding: 20px 0;
}

.header-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20px;
}

.logo {
  font-size: 24px;
  color: var(--hero-main);
  font-weight: 700;
}

nav ul {
  display: flex;
  list-style: none;
  gap: 25px;
}

nav a {
  font-size: 18px;
  color: var(--hero-secondary);
  text-decoration: none;
}

.nav-link {
  text-decoration: none;
  transition: color 0.2s;
}

.nav-link:hover, .nav-link:focus {
  color: var(--accent);
  outline: none;
}

.learn-more {
  display: inline-block;
  background: var(--button-color);
  color: white;
  padding: 0.5em 1em;
  border-radius: 0.375rem;
  text-decoration: none;
  font-weight: 600;
  transition: opacity 0.2s;
}
.learn-more:hover { opacity: 0.9; }

/* HERO SECTION */
.hero {
  background-color: var(--dark-bg);
  padding: 100px 0;
}

.hero-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  gap: 50px;

  padding: 0 20px;
}

.hero-text {
  flex: 1;
}

.hero-image-container {
  flex: 1;
  border-radius: 8px;
  overflow: hidden;
  min-height: 250px;
  max-height: 400px;
  display: flex;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center top;
  transition: transform 0.3s ease;
}

/* Add hover effect */
.hero-image:hover {
  transform: scale(1.03);
}

/* Responsive adjustments */
@media (max-width: 640px) {
  .hero-image-container {
    max-height: 300px;
    min-height: 200px;
    width: 100%;
    order: -1; /* Move image above text on mobile */
    margin-bottom: 30px;
  }
}

.hero h1 {
  font-size: 48px;
  font-weight: 900;
  color: var(--hero-main);
  line-height: 1.1;
  margin-bottom: 10px;
}

.hero p {
  font-size: 18px;
  color: var(--hero-secondary);
  margin-bottom: 20px;
}

